---
// Snippets
import BigHeroImage from '../components/BigHeroImage.astro';
import RowsTextImage from '../components/RowsTextImage.astro';
import IconFeatures from '../components/IconFeatures.astro';

// Layouts
import Layout from '../layouts/Layout.astro';

