---

<Layout>
	<t name="Home" t-name="website.homepage">
  	<t t-call="website.layout">
    	<t t-set="pageName" t-value="'homepage'"/>
    	<div id="wrap" class="oe_structure oe_empty"></div>

				<BigHeroImage />	
				<RowsTextImage />	
				<IconFeatures />

			</div>
  	</t>
	</t>
</Layout>
